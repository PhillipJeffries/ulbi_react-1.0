{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        //for absolut imports
        "baseUrl": ".",
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        //to use imports
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "preserveConstEnums": true
        // "types": ["react/next", "react-dom/next"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "src/**/*", "config/jest/setupTests.ts"
    ],
    "exclude": [
        "eslintrc.js",
    ]
}